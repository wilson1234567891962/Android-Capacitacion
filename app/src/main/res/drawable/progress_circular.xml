<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape
            android:innerRadiusRatio="2.15"
            android:shape="ring"
            android:thickness="@dimen/progress_circular_background_height"
            android:useLevel="true">
            <solid android:color="@color/opacity_50" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress"
        android:gravity="center_vertical|fill_horizontal">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180">
            <shape
                android:innerRadiusRatio="2.15"
                android:shape="ring"
                android:thickness="@dimen/progress_circular_background_height"
                android:useLevel="true">
                <solid android:color="@color/opacity_50" />
            </shape>
        </rotate>
    </item>
    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180">
            <shape
                android:innerRadiusRatio="2.25"
                android:shape="ring"
                android:thickness="@dimen/progress_circular_height"
                android:thicknessRatio="100"
                android:useLevel="true">
                <solid android:color="@color/branco" />
            </shape>
        </rotate>
    </item>
</layer-list>